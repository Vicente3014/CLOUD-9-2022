@*@model IEnumerable<CLOUD_LIB.FaturaModel>*@
@using CLOUD_LIB 
@model List<FaturaModel>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor IHttpContextAccessor
@{
    ViewData["Title"] = "ListaFatura";
}
@IHttpContextAccessor.HttpContext.Session.GetString("UtilizadorID")
<h1>Lista de Fatura</h1>


<div class="text-center">
    <h1 class="display-4">Lista de Artigos</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Total</th>
                <th scope="col">Morada de Entrega</th>
                <th scope="col">Utilizador</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (FaturaModel Fatura in @Model)
                {
            <tr>
                <th scope="row">@Fatura.Total</th>
                <th scope="row">@Fatura.MoradaEntrega</th>
                <th scope="row">@Fatura.Utilizador</th>

                <td>
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-primary" asp-route-id="@Fatura.FaturaID" asp-controller="Fatura" asp-action="Apagar">Apagar</a>
                        
                    </div>
                </td>
            </tr>

                }
            }


        </tbody>
    </table>
