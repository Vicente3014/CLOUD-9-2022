@using CLOUD_LIB;
@model List<CategoriaModel>;

@{
    ViewData["Title"] = "Lista de Categorias";
}
<div class="text-center">
    <h1 class="display-4">Lista de Categoria</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (CategoriaModel categoria in Model)
                {
                    <tr>
                        <th scope="row">@categoria.ID</th>
                        <th scope="row">@categoria.Nome</th>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@categoria.ID" asp-controller="Categoria" asp-action="Apagar">Apagar</a>
                            </div>
                        </td>
                    </tr>                    
                    
                }
            }
        </tbody>
    </table>
    <form>
        <button class="btn btn-primary btn-block" asp-area="" asp-controller="Categoria" asp-action="Adicionar">Adicionar Categoria</button>
    </form>    
</div>
