@using CLOUD_LIB 
@model List<UtilizadorModel>
@{ 
    ViewData["Title"] = "Lista de Utilizadores";
}
<div class="text-center">
    <h1 class="display-4">Lista de Utilizadores</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Login</th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
             {
                foreach(UtilizadorModel utilizador in Model)
                {
                   <tr>
                       <th scope="row">@utilizador.ID</th>
                       <th scope="row">@utilizador.Nome</th>
                       <th scope="row">@utilizador.Email</th>
                       <th scope="row">@utilizador.Login</th>
                       <td>
                           <div class="btn-group" role="group">
                               <a role="button" class="btn btn-primary" asp-route-id="@utilizador.ID" asp-controller="Utilizador" asp-action="Apagar">Apagar</a>
                           </div>                           
                       </td>
                   </tr>
                    
                }
             }
        </tbody>
    </table>
</div>